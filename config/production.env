# VibeStream Production Configuration
# AWS S3 Audio Storage Configuration
AWS_S3_BUCKET=vibestream-audio-production
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# CloudFront CDN Configuration
VIBESTREAM_CDN_DOMAIN=cdn.vibestream.com

# Storage Limits
MAX_AUDIO_FILE_SIZE=200000000  # 200MB
UPLOAD_TIMEOUT_SECONDS=300     # 5 minutes

# Performance Settings
ENABLE_AUDIO_COMPRESSION=true
ENABLE_METADATA_EXTRACTION=true
ENABLE_AUDIO_PREVIEW_GENERATION=true

# Security Settings
ENABLE_VIRUS_SCANNING=true
ALLOWED_AUDIO_FORMATS=mp3,flac,wav,aac,ogg,m4a

# Monitoring
ENABLE_UPLOAD_ANALYTICS=true
ENABLE_STREAMING_ANALYTICS=true
LOG_LEVEL=info 